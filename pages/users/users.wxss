/**index.wxss**/
page{
  height: 100%;
  background-color: #EBEBEB;
}
.box{
  width: 100%;
  height: 245rpx;
  background-color: #3E3E3E;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}
  
.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin-bottom: 5rpx;
    margin-top: 25rpx;
    border-radius: 50%;
}
  
.userinfo-nickname {
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  color: white;
  font-size: 18px;
  font-weight: 1px;
}

.items1{
  height: 40px;
  background-color: white;
  margin-top: 2px;
  margin-bottom: 2px;
  display: flex;
  border-radius: 0px;
}

.items1::after{
  border: none;
}

.items2{
  height: 40px;
  background-color: white;
